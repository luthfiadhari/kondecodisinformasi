    <script>
        // Data semua adegan
        const scenes = [
            { id: 'bab1-scene1', title: 'PROLOG' },
            { id: 'bab1-scene2', title: 'PROLOG' },
            { id: 'bab2-scene1', title: 'SERANGAN KBGO DATANG', glitch: true },
            { id: 'bab2-scene2', title: 'SERANGAN KBGO DATANG' },
            { id: 'bab2-scene3', title: 'SERANGAN KBGO DATANG' },
            { id: 'bab3-scene1', title: 'LABIRIN SISTEM HUKUM' },
            { id: 'bab3-scene2', title: 'LABIRIN SISTEM HUKUM' },
            { id: 'bab3-scene3', title: 'LABIRIN SISTEM HUKUM' },
            { id: 'bab3-scene4', title: 'LABIRIN SISTEM HUKUM' },
            { id: 'bab3-scene5', title: 'LABIRIN SISTEM HUKUM' },
            { id: 'bab3-scene6', title: 'LABIRIN SISTEM HUKUM' },
            { id: 'epilog-scene1', title: 'EPILOG: PERJUANGAN BELUM USAI' },
            { id: 'epilog-scene2', title: 'EPILOG: PERJUANGAN BELUM USAI' }
        ];

        let currentSceneIndex = 0;

        // Elemen UI
        const nextBtn = document.getElementById('next-btn');
        const prevBtn = document.getElementById('prev-btn');
        const sceneTitle = document.getElementById('scene-title');
        const currentSceneSpan = document.getElementById('current-scene');
        const totalScenesSpan = document.getElementById('total-scenes');

        // Inisialisasi
        totalScenesSpan.textContent = scenes.length;

        function showScene(index) {
            // Validasi indeks
            if (index < 0 || index >= scenes.length) return;
            
            // Update indeks adegan saat ini
            currentSceneIndex = index;
            
            // Sembunyikan semua adegan
            document.querySelectorAll('.scene').forEach(scene => {
                scene.classList.remove('active');
            });

            // Tampilkan adegan saat ini
            const currentSceneData = scenes[index];
            const currentSceneElement = document.getElementById(currentSceneData.id);
            currentSceneElement.classList.add('active');
            
            // Update judul
            sceneTitle.textContent = currentSceneData.title;

            // Terapkan efek glitch jika diperlukan
            if (currentSceneData.glitch) {
                const glitchTarget = document.getElementById('glitch-target');
                if (glitchTarget) {
                    // Reset glitch effect
                    glitchTarget.classList.remove('glitch');
                    setTimeout(() => {
                        glitchTarget.classList.add('glitch');
                    }, 100);
                }
            }

            // Update status tombol navigasi
            prevBtn.disabled = index === 0;
            nextBtn.disabled = index === scenes.length - 1;
            
            // Update indikator progress
            currentSceneSpan.textContent = index + 1;

            // Update teks tombol di adegan terakhir
            if (index === scenes.length - 1) {
                nextBtn.textContent = 'üèÅ';
            } else {
                nextBtn.textContent = '‚û°Ô∏è';
            }
        }

        // Event listeners untuk navigasi
        nextBtn.addEventListener('click', () => {
            if (currentSceneIndex < scenes.length - 1) {
                showScene(currentSceneIndex + 1);
            } else {
                // Tampilkan pesan akhir
                alert('Terima kasih telah mengikuti perjalanan R dan anaknya. Perjuangan mereka mewakili banyak korban kekerasan digital lainnya.');
            }
        });

        prevBtn.addEventListener('click', () => {
            if (currentSceneIndex > 0) {
                showScene(currentSceneIndex - 1);
            }
        });

        // Tambahkan navigasi keyboard
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ' || e.key === 'Spacebar') {
                // Tombol panah kanan atau spasi untuk maju
                e.preventDefault();
                if (currentSceneIndex < scenes.length - 1) {
                    showScene(currentSceneIndex + 1);
                }
            } else if (e.key === 'ArrowLeft') {
                // Tombol panah kiri untuk mundur
                e.preventDefault();
                if (currentSceneIndex > 0) {
                    showScene(currentSceneIndex - 1);
                }
            }
        });

        // Inisialisasi adegan pertama
        showScene(currentSceneIndex);
    </script>
</body>
