    <script>
        // Fungsi untuk membuka atau menutup detail kartu yang diklik
        function toggleDetails(clickedCard) {
            const clickedDetails = clickedCard.querySelector('.details');
            
            // Cek apakah kartu yang diklik sudah terbuka
            const isAlreadyOpen = clickedCard.classList.contains('active');
            
            if (isAlreadyOpen) {
                // Jika sudah terbuka, tutup kartu tersebut
                clickedDetails.style.maxHeight = '0px';
                clickedDetails.style.paddingTop = '0';
                clickedDetails.style.paddingBottom = '0';
                clickedCard.classList.remove('active');
            } else {
                // Jika belum terbuka, buka kartu tersebut
                clickedDetails.style.maxHeight = clickedDetails.scrollHeight + "px";
                clickedDetails.style.paddingTop = '15px';
                clickedDetails.style.paddingBottom = '5px';
                clickedCard.classList.add('active');
            }
        }
    </script>

